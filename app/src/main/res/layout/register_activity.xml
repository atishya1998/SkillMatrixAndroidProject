<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backdrop">

    <view class="android.widget.LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="240px"
        android:background="#115AD7"
        android:requiresFadingEdge="vertical"
        >
        <TextView
            android:id="@+id/appheading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SKILL MATRIX"
            android:textSize="100px"
            android:fontFamily="sans-serif-condensed-medium"
            tools:ignore="MissingConstraints"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="11dp"/>

    </view>


    <view
        class="android.widget.LinearLayout"
        android:layout_width="330dp"
        android:layout_height="1000px"
        android:layout_marginLeft="46dp"
        android:layout_marginTop="150px"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingTop="13dp"
        android:paddingBottom="20dp"
        android:layout_marginBottom="@dimen/cardview_compat_inset_shadow">

        <TextView
            android:id="@+id/register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Register"
            android:textSize="65px" />

        <TextView
            android:id="@+id/userid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="UserId"
            android:textSize="45px" />

        <EditText
            android:id="@+id/useridtext"
            android:layout_width="270dp"
            android:layout_height="48dp"
            android:ems="10"
            android:hint="Enter EmployeeId"
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/firstname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="First Name"
            android:textSize="45px" />

        <EditText
            android:id="@+id/Fullname"
            android:layout_width="270dp"
            android:layout_height="48dp"
            android:ems="10"
            android:hint="full name"
            android:inputType="text" />


        <TextView
            android:id="@+id/emailtext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="45px" />

        <EditText
            android:id="@+id/email"
            android:layout_width="270dp"
            android:layout_height="48dp"
            android:ems="10"
            android:hint="Enter Email"
            android:inputType="textEmailAddress"
            android:minHeight="48dp" />

        <TextView
            android:id="@+id/passwordtext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textSize="45px" />

        <EditText
            android:id="@+id/password"
            android:layout_width="270dp"
            android:layout_height="48dp"
            android:ems="10"
            android:hint="Enter Password"
            android:inputType="textPassword" />


    </view>

    <Button
        android:id="@+id/LoginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:background="#115AD7"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="20dp"
        tools:ignore="MissingConstraints" />

</LinearLayout>